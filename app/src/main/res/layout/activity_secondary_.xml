<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cameraLayout"
    android:background="@android:color/transparent"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Secondary_Activity" >

    <com.example.jesusify.DrawView
        android:id="@+id/surface_viewf1"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1" />


    <HorizontalScrollView
        android:id="@+id/faceSelect"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_alignParentTop="true"
        android:scrollbars="none"

        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools/"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/s1_doge"
                android:layout_width="280px"
                android:layout_height="280px"
                android:layout_marginRight="20dp"
                android:src="@drawable/doge_sticker" />

            <ImageView
                android:id="@+id/s2_hera"
                android:layout_width="280px"
                android:layout_height="280px"
                android:layout_marginRight="20dp"
                android:src="@drawable/hera_sticker" />
            <ImageView
                android:id="@+id/s3_zeus"
                android:layout_width="280px"
                android:layout_height="280px"
                android:layout_marginRight="20dp"
                android:src="@drawable/zeus_sticker" />

            <ImageView
                android:id="@+id/s4_grumpycat"
                android:layout_width="280px"
                android:layout_height="280px"
                android:layout_marginRight="20dp"
                android:src="@drawable/grumpycat_sticker" />
        </LinearLayout>

        </HorizontalScrollView>
    <ImageView
        android:id="@+id/iv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_launcher_dot" />
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_launcher_dot" />

    <ImageView
        android:id="@+id/iv2"
        android:rotation="90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:layout_marginTop="15dp"
        android:src="@drawable/ic_action_flip" />
    <ImageView
        android:id="@+id/iv3"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="15dp"
        android:src="@drawable/share_icon" />
    <ImageView
        android:id="@+id/iv4"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_above="@id/iv3"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="15dp"
        android:src="@drawable/save_icon" />
    <ImageView
        android:id="@+id/iv5"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="15dp"
        android:src="@drawable/back_arrow" />

</RelativeLayout>